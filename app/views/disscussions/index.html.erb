<p id="notice"><%= notice %></p>

<h4>Discussions</h4>

<table class="striped">
  <thead>
    <tr>
      <th>Headline</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disscussions.each do |disscussion| %>
      <tr>
        <td><%= disscussion.headline %></td>
        <td><%= disscussion.content %></td>
        <td><%= link_to 'Show', disscussion %></td>
        <td><%= link_to 'Edit', edit_disscussion_path(disscussion) %></td>
        <td><%= link_to 'Destroy', disscussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Disscussion', new_disscussion_path, class: "waves-effect waves-light btn" %>
