<!DOCTYPE html>
<html>
  <head>
    <title>TheForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="navbar-fixed">
          <nav class="blue darken-3">
            <div class="nav-wrapper container">
              <%= link_to "Forum", root_path, class: "brand-logo" %>
              <ul class="right hide-on-med-and-down">
                <% if user_logged_in? %>
                  <li><%="Signed in as #{current_user.name} "%>
                  <li><%= image_tag(current_user.image_url, :alt => "user icon", class: "circle valign-wrapper top-padding")%></li>
                  <li><%= link_to "Sign out", sign_out_path %></li>
                <% else %>
                  <li><a href="/auth/twitter">Sign in with Twitter</a></li>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
              
    <div class="container" >
        <%= yield %>
    </div>
  </body>
</html>
